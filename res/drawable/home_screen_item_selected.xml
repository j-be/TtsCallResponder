<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Bottom Shadow -->
<item android:top="@dimen/shadow_size" android:left="@dimen/shadow_size">
    <shape  android:shape="rectangle">
        <corners android:radius="2dp" />
        <solid android:color="@color/selectionColor" />
    </shape>
</item>

<!-- White Top color -->
<item android:bottom="@dimen/shadow_size" android:right="@dimen/shadow_size">
	<shape xmlns:android="http://schemas.android.com/apk/res/android"
	       android:shape="rectangle" >
	    <corners
	          android:radius="1dp"/>
	    <stroke
	          android:width="1dp"
	          android:color="@color/buttonColor" />
	    <solid android:color="@android:color/white"/>
	    <padding android:bottom="@dimen/shadow_size" android:right="@dimen/shadow_size"/>
	</shape>
</item>

</layer-list>
