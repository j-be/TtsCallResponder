<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:id="@+id/textView_headerAutoResponder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Auto Responder"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="@dimen/activity_main_big_spacing"
        android:layout_marginTop="@dimen/activity_main_small_spacing" />

    <Switch
        android:id="@+id/switch_answerCalls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textView_headerAutoResponder"
        android:onClick="onSwitchAutorespondClick"
        android:text="@string/switch_auto_respond"
        android:layout_marginBottom="@dimen/activity_main_big_spacing" />

    <TextView
        android:id="@+id/textView_lbl_numberOfAnsweredCalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/switch_answerCalls"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Number of answered calls:"
        android:layout_marginBottom="@dimen/activity_main_small_spacing" />
    <TextView
        android:id="@+id/textView_numberOfAnsweredCalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_lbl_numberOfAnsweredCalls"
        android:layout_toRightOf="@+id/textView_lbl_numberOfAnsweredCalls"
        android:layout_marginLeft="@dimen/activity_main_small_spacing"
        android:text="X"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button_showAnsweredCallList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textView_lbl_numberOfAnsweredCalls"
        android:onClick="onShowAnsweredCallListClick"
        android:text="Show list of answered calls"
        android:layout_marginBottom="@dimen/activity_main_big_spacing" />

    <TextView
        android:id="@+id/textView_headerPreparedResponses"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/button_showAnsweredCallList"
        android:layout_marginTop="48dip"
        android:text="Prepared Responses"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="@dimen/activity_main_big_spacing"  />

    <TextView
        android:id="@+id/textView_lbl_currentPreparedResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textView_headerPreparedResponses"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Currently using response:"/>
    <TextView
        android:id="@+id/textView_currentPreparedResponseTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textView_lbl_currentPreparedResponse"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:singleLine="true"
        android:text="&quot;TITLE HERE&quot;"
        android:layout_marginLeft="@dimen/activity_main_big_spacing"
        android:layout_marginBottom="@dimen/activity_main_small_spacing" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textView_currentPreparedResponseTitle"
        android:onClick="onShowPreparedResopnseList"
        android:text="Show list of prepared responses" />

