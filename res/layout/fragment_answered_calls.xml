<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/button_callers_dummy"
        style="@style/UiItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/textView_header_callers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/header_callers" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_answered_calls"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/button_callers_dummy" >
    </ListView>

</RelativeLayout>