<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.duckdns.raven.ttscallresponder"
    android:versionCode="90"
    android:versionName="0.9.0-beta1" >

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="org.duckdns.raven.ttscallresponder.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.duckdns.raven.ttscallresponder.ui.answeredCalls.ActivityAnsweredCallList"
            android:label="@string/title_activity_answered_call_list"
            android:parentActivityName="org.duckdns.raven.ttscallresponder.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.duckdns.raven.ttscallresponder.MainActivity" />
        </activity>
        <activity
            android:name="org.duckdns.raven.ttscallresponder.ui.responseTemplates.ActivityResponseTemplateList"
            android:label="@string/title_activity_response_template_list"
            android:parentActivityName="org.duckdns.raven.ttscallresponder.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.duckdns.raven.ttscallresponder.MainActivity" />
        </activity>
        <activity
            android:name="org.duckdns.raven.ttscallresponder.ui.settings.ActivitySettings"
            android:label="@string/title_activity_activity_settings"
            android:parentActivityName="org.duckdns.raven.ttscallresponder.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.duckdns.raven.ttscallresponder.MainActivity" />
        </activity>

        <service android:name="org.duckdns.raven.ttscallresponder.TtsCallResponderService"
            android:enabled="false" />

    </application>

</manifest>
